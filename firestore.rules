rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserTier(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.tier;
    }

    function isPaidUser(userId) {
      return getUserTier(userId) == 'paid';
    }

    function isAdmin() {
      return isAuthenticated() && getUserTier(request.auth.uid) == 'admin';
    }

    // User profiles - only authenticated users can read their own profile, admins can read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      function isIsoDateString(value) {
        return (value is string) && value.matches('^[0-9]{4}-[0-9]{2}-[0-9]{2}$');
      }

      function validDob(value) {
        return value == null || isIsoDateString(value) || (value is timestamp && value <= request.time);
      }

      function validRetirementAge(age) {
        return age == null || (age is int && age >= 40 && age <= 100);
      }

      function validIncome(income) {
        return income == null || (income is number && income >= 0);
      }

      function validProfileFields() {
        return validDob(request.resource.data.dob) &&
               validRetirementAge(request.resource.data.retirementAge) &&
               validIncome(request.resource.data.currentAnnualIncome);
      }

      allow create: if isAuthenticated() && request.resource.data.tier in ['free', 'paid', 'admin'] && validProfileFields();
      allow update: if (isOwner(userId) || isAdmin()) && validProfileFields();
      allow delete: if isOwner(userId) || isAdmin();

      // User profile sub-collection
      match /profile/{document=**} {
        allow read, write: if isOwner(userId);
      }

      // Applications data - free users can read only, paid users can read/write
      match /applications/{appId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId) && isPaidUser(userId);

        match /savedCalculations/{calculation=**} {
          allow read: if isOwner(userId);
          allow create, write, delete: if isOwner(userId) && isPaidUser(userId);
        }

        match /savedRecommendations/{recommendation=**} {
          allow read: if isOwner(userId);
          allow create, write, delete: if isOwner(userId) && isPaidUser(userId);
        }

        match /preferences/{document=**} {
          allow read, write: if isOwner(userId);
        }
      }

      // Analytics - users can write their own events
      match /analytics/{document=**} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
      }

      // Usage tracking - track AI queries for free users
      match /usage/{document=**} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }

    // Admin access to analytics (for analytics dashboard)
    match /analytics/{document=**} {
      allow read: if isAdmin();
    }

    // Application configurations - admin only for write, all authenticated users can read
    match /apps/{document=**} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Public data (if needed for read-only recommendations)
    match /publicData/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
